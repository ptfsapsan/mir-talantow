<?php

/**
 * @var Zend\Paginator\Paginator $thanks
 */

?>
<div>
   <? if(count($thanks)){?>
      <table>
         <tr>
            <th>ID</th>
            <th>Дата</th>
            <th>Имя</th>
            <th>Редактировать</th>
            <th>Удалить</th>
         </tr>
         <? foreach($thanks as $thank){
             $thank = (array) $thank;
            $id = $thank['id'];?>
            <tr>
               <td><?=$id?></td>
