               <td><?=$thank['name']?></td>
               <td><a href="<?=$this->url('admin_thank_detail',
                     ['id' => $id])?>">
                     Редактировать</a></td>
               <td>
                  <a href="?act=delete&id=<?=$id?>">
                     <img src="<?=$this->basePath('/images/delete-icon.png')?>"
